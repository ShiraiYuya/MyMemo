<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f9f9f9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shirayama.mymemo.SubActivity"
    tools:showIn="@layout/activity_sub">

    <TextView
        android:id="@+id/title"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="メモ編集"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        />

    <TextView
        android:id="@+id/memoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="タイトル"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        />

    <EditText
        android:id="@+id/editTitle"
        android:layout_width="310dp"
        android:layout_height="44dp"
        android:background="@drawable/box"
        android:gravity="top|left"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text=""
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/memoTitle"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/memoContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本文"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTitle"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        />

    <EditText
        android:id="@+id/editContent"
        android:gravity="top|left"
        android:layout_width="310dp"
        android:layout_height="210dp"
        android:background="@drawable/box"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text=""
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/memoContent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearlayout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/editContent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="0dp"
        android:weightSum="1">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登録"



             />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
